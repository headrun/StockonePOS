<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/items_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cash"/>

        <LinearLayout
            android:layout_toRightOf="@+id/img_cash"
            android:layout_toLeftOf="@+id/time_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/trans_detail_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹ 60,000.60"
                android:textStyle="bold"
                android:textColor="@color/button_text_color"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/trans_detail_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="10 items"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/time_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3:40PM"
                android:textStyle="bold"
                android:textColor="@color/grey"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/trans_detail_receipt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="#16"/>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>