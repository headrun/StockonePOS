<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.pages.products.Products">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_product"
        android:background="@color/white"
        app:theme="@style/ToolbarTheme"
        android:layout_width="match_parent"
        android:layout_height="52dp">

        <TextView
            android:id="@+id/image_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Items"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"/>

    </android.support.v7.widget.Toolbar>

    <android.support.design.widget.TabLayout
        android:id="@+id/product_tab"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:tabIndicatorColor="@color/button_text_color"
        app:tabSelectedTextColor="@color/button_text_color"
        android:background="@color/white"
        android:layout_below="@+id/toolbar_product"/>

    <android.support.v4.view.ViewPager
        android:layout_below="@+id/product_tab"
        android:id="@+id/product_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>